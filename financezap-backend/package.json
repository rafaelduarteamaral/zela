{
  "name": "financezap",
  "version": "1.0.0",
  "description": "Projeto para receber mensagens do WhatsApp via Twilio",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run test:ci && tsc",
    "build:skip-tests": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --bail",
    "dev:worker": "wrangler dev --config wrangler.toml",
    "dev:worker:local": "wrangler dev --config wrangler.toml --local",
    "deploy:worker": "npm run build:skip-tests && wrangler deploy --config wrangler.toml",
    "deploy:worker:with-tests": "npm run test:ci && wrangler deploy --config wrangler.toml",
    "deploy:safe": "bash scripts/deploy.sh"
  },
  "keywords": [
    "twilio",
    "whatsapp",
    "webhook"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "^6.19.0",
    "@tsndr/cloudflare-worker-jwt": "^3.2.0",
    "axios": "^1.13.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "groq-sdk": "^0.5.0",
    "hono": "^4.6.13",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.19.0",
    "twilio": "^4.19.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250204.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "wrangler": "^4.52.1"
  }
}
